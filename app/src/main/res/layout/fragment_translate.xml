<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android_cjj118.ui.me.translate.TranslateFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="翻译"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <!--    <TextView-->
    <!--        android:id="@+id/tv_your_input"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="您的输入"-->
    <!--        android:layout_below="@id/tv_title"-->
    <!--        android:layout_marginTop="20dp"-->
    <!--        android:textSize="18sp"-->
    <!--        android:textColor="#000000"-->
    <!--        android:layout_marginStart="16dp" />-->

    <EditText
        android:id="@+id/et_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/edittext_style"
        android:hint="输入要翻译的文字"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />
    <!--    android:layout_below="@id/tv_your_input"-->

    <Button
        android:id="@+id/bt_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_word"
        android:layout_marginTop="12dp"
        android:text="翻译"
        android:background="@drawable/button_style" />

    <TextView
        android:id="@+id/tv_translation_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="翻译结果"
        android:layout_below="@id/bt_translate"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_translation_result"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_style"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="#000000" />
</RelativeLayout>
